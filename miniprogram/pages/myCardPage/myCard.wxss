/* miniprogram/pages/minePage/minePage.wxss */
.item-contain {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background:rgba(255,255,255,1);
}
.item-head {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.head-bottom {
  display: flex;
  width: 100%;
  justify-content: space-around;
  align-items: center;
  margin: 30rpx 0;
}

.popularity image {
  width: 26rpx;
  height: 33rpx;
}
.popularity text {
  font-size: 26rpx;
  line-height: 40rpx;
  font-family:SourceHanSansCN-Regular;
  color: #B6B6B6;
  margin-left: 12rpx;
}

.collection image {
  width: 35rpx;
  height: 35rpx;
}

.collection text {
  font-size: 26rpx;
  line-height: 40rpx;
  font-family:SourceHanSansCN-Regular;
  color: #B6B6B6;
   margin-left: 12rpx;
}
.bottom-collection {
  width: 39rpx;
  height: 34rpx;
}

/* .card-collection {

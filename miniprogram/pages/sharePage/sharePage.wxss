/* miniprogram/pages/editPage/editPage.wxss */
.item-contain {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: rgb(247, 247, 247);
}

.item-top {
  margin: 30rpx auto;
  box-shadow: 4px 4px 15px #CCC; 
}

.item-icon {
  margin: 42rpx 0;
  display: flex;
  justify-content: space-around;
}
.collection-card,
.mine-card,
.share-card{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.collection-card image,
.mine-card image,
.share-card image {
  margin-bottom: 20rpx;
  width: 47rpx;
  height: 47rpx;
}

.collection-card text,
.mine-card text
{
  font-size: 26rpx;
  font-family:SourceHanSansCN-Regular;
font-weight:400;
color:rgba(51,51,51,1);
}

.share-card button {
padding-left: 0;
padding-right: 0;
font-family:SourceHanSansCN-Regular;
font-size: 26rpx;
line-height: 45rpx;
margin-top: -4rpx;
}



.item-middle {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.Info-tltle {
margin: 61rpx 30rpx 36rpx;
}

.Info-tltle text {
font-size: 16px;
font-weight: bold;
color: #666
}
.s-tittle {
  font-size: 14px;
  font-weight: normal;
  margin-left: 14rpx;
  color: #ccc
}

.edit {
  border-bottom: 1rpx solid #ccc;
  background-color: #fff;
  width: 712rpx;
  height: 120rpx;
  line-height: 120rpx;
  padding-left: 36rpx;
  display: flex;
  align-items: baseline
}

.edit-text {
font-size: 28rpx;
}

.edit-input {
  font-size: 28rpx;
  margin-left: 60rpx;
  margin-top: 20rpx;
  display: inline-block;
}
.must {
  color: red
}

.item-btn {
  margin: 50rpx auto;
width:400rpx;
height:100rpx;
background-color: #F8A73C;
box-shadow:0px 0px 30rpx 0px rgba(183, 20, 113, 0.35);
border-radius:44rpx;
line-height: 100rpx;
}

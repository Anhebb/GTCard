.contain{
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.swiper-tab{
  width: 690rpx;
  border:1px solid rgba(245,165,59,1);
  text-align: center;
  line-height: 80rpx;
  border-radius:35px;
  }
.swiper-tab-list{ 
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  color: #da7c0c;
}
.on1{ 
  color: #FFFFFFFF;
  background-color: #da7c0c;
  border-top-left-radius:35rpx;
  border-bottom-left-radius:35rpx;
  }
.on2{ 
  color: #FFFFFFFF;
  background-color: #da7c0c;
  border-top-right-radius:35rpx;
  border-bottom-right-radius:35rpx;
  }
.swiper-box{ 
  display: block; 
  height: 100%; 
  width: 100%; 
  overflow: hidden; 
  }
.swiper-item{
  margin-top: 37rpx;
  display: block;
}
.item_1{
  display: flex;
  flex-direction: row;
  justify-content: left;
  height: 140rpx;
  width: 750rpx;
  background:rgba(249,249,249,1);
  border-bottom: 1rpx solid rgba(238,238,238,1);
}
.swiper-box image{
  margin-left: 31rpx;
  margin-top: 29rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.item_text{
  margin-top: 35rpx;
  margin-left: 19rpx;
  display: flex;
  flex-direction: column;
}
.text_1{
height:27rpx;
font-size:28rpx;
font-family:SourceHanSansCN-Medium;
font-weight:500;
color:rgba(51,51,51,1);
line-height:40rpx;
}
.text_2{
height:19rpx;
font-size:20rpx;
font-family:SourceHanSansCN-Regular;
font-weight:400;
color:rgba(153,153,153,1);
line-height:40rpx;
margin-top: 15rpx;
}